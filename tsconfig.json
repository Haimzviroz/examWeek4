{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",        // Source files should be in the `src` folder
    "outDir": "./dist",        // Compiled files will go to the `dist` folder
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],   // Include all TypeScript files in the `src` directory
  "exclude": ["node_modules", "dist"]  // Exclude `node_modules` and `dist` from compilation
}
